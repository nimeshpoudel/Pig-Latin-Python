pig.py


pyg = 'ay'
pyg2 = 'yay'
original = raw_input('Enter a word:')

if len(original) > 0 and original.isalpha():
    
    word = original.lower()
    
    first = word[0]
    second = word[1]
    
    if first in("a" , "e" , "i" , "o" , "u" ):
      print word + pyg2
    elif second in("a" , "e" , "i" , "o" , "u" ):
      print word[1:] + first + pyg
    else:
      print word[1:] + first + second + pyg
    
else:
    print 'empty'
